#include <stdio.h>
#include <math.h>
#include <locale.h>

int main (){
float x0,y0,R,x1,y1,d;
setlocale(LC_CTYPE,"ru");
printf("\n\tВед1ть кординати точки O");
printf("\n\tВвед1ть кординату x0: ");
scanf("%f", &x0);
printf("\tВвед1ть кординату y0: ");
scanf("%f", &y0);
printf("\n\tВед1ть R(рад1ус): ");
scanf("%f", &R);
printf("\n\tВед1ть кординати точки A");
printf("\n\tВвед1ть кординату x1: ");
scanf("%f", &x1);
printf("\tВвед1ть кординату y1: ");
scanf("%f", &y1);

d = sqrt((pow(x1-x0,2))+(pow(y1-y0,2)));//в1др1зок м1ж точками
if (R < 0) R= R *(-1);
else if(R==0){
  printf("точка О не маэ рад1уса, значить кола нема");
  
  }
else if(R>d){
  printf("точка A всередині круга");
}
else if(R==d) printf("точка A на його окружності");
else printf("точка А знаходиться за кругом");
  return 0;
}
