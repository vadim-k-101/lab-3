#include <stdio.h>
#include <math.h>
#include <locale.h>

int main() {
  int x, z;
  float y;
setlocale (LC_CTYPE,"ru");
printf("\nВед1ть ц1ле число x: ");
scanf("%d",&x);
printf("Вед1ть ціле число z: ");
scanf("%d",&z);

if ( x ==-5 && z == 7){
  printf("\nВаш1 данн1 не можливо обчислити, у знаменнику нуль");
}
else if (x==5){
  y= (float)(3*x)+(x*z);
  printf("\ny = %.2f", y);
}
else if (x==-5 && z != 7){
  y= (float)(2*x*z)/(7-z);
  printf("\ny = %.2f", y);
}
else if (x==0){
  y = x;
  printf("\ny = %.2f", y);
}


  return 0;
}
